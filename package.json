{
    "name": "@uxp/monorepo",
    "description": "Unified Experience Platform root monorepo",
    "private": true,
    "version": "1.0.0",
    "type": "module",
    "scripts": {
        "prepare": "husky install",
        "build": "pnpm -r build",
        "clean": "pnpm -r clean",
        "build:bff": "pnpm --filter=@uxp/bff build ",
        "build:ui": "pnpm --filter=@uxp/ui build ",
        "build-dev:ui": "pnpm --filter=@uxp/ui build-dev",
        "build:common": "pnpm --filter=@uxp/common build ",
        "build:ui-lib": "pnpm --filter=@uxp/ui-lib build ",
        "clean:bff": "pnpm --filter=@uxp/bff clean ",
        "clean:common": "pnpm --filter=@uxp/common clean ",
        "clean:ui": "pnpm --filter=@uxp/ui clean ",
        "clean:ui-lib": "pnpm --filter=@uxp/ui-lib clean ",
        "watch": "pnpm --filter=@uxp/common --filter=@uxp/ui-lib watch ",
        "start:app": "pnpm --filter=@uxp/ui start ",
        "start:bff": "pnpm --filter=@uxp/bff dev ",
        "lint": "eslint packages/**",
        "lint:fix": "eslint packages/** --fix",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "format:check2": "prettier --check ."
        
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "lint-staged": {
        "*.ts": [
            "eslint --fix",
            "prettier --write"
        ],
        "*.tsx": [
            "eslint --fix",
            "prettier --write"
        ],
        "*.js": [
            "eslint --fix",
            "prettier --write"
        ]
    },
    "devDependencies": {
        "@babel/core": "^7.26.0",
        "@babel/preset-env": "^7.26.0",
        "@babel/preset-react": "^7.25.9",
        "@babel/preset-typescript": "^7.26.0",
        "@eslint/js": "^9.15.0",
        "@types/node": "^22.9.0",
        "@types/react": "^18.3.12",
        "@types/react-dom": "^18.3.1",
        "@types/webpack": "^5.28.5",
        "@types/webpack-env": "^1.18.5",
        "@typescript-eslint/eslint-plugin": "^8.14.0",
        "@typescript-eslint/parser": "^8.14.0",
        "babel-loader": "^9.2.1",
        "css-loader": "^7.1.2",
        "eslint": "^9.15.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-prettier": "^5.2.1",
        "eslint-plugin-react": "^7.37.2",
        "eslint-plugin-react-hooks": "^5.0.0",
        "globals": "^15.12.0",
        "html-webpack-plugin": "^5.6.3",
        "husky": "^9.1.6",
        "lint-staged": "^15.2.10",
        "path": "^0.12.7",
        "prettier": "^3.3.3",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "rimraf": "^6.0.1",
        "style-loader": "^4.0.0",
        "terser-webpack-plugin": "^5.3.10",
        "ts-loader": "^9.5.1",
        "ts-node": "^10.9.2",
        "typescript": "^5.6.3",
        "webpack": "^5.96.1",
        "webpack-cli": "^5.1.4",
        "webpack-dev-server": "^5.1.0",
        "webpack-merge": "^6.0.1"
    }
}