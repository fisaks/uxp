{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "module": "commonjs",
    "moduleResolution": "Node",
    "target": "ES2022",
    "lib": [
      "ES2022"
    ],
    "declaration": true,
    "declarationMap": false,
    "sourceMap": false,
    "removeComments": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "composite": true
  },
  "include": [
    "src/**/*"
  ],
   "exclude": ["dist", "node_modules"]
}