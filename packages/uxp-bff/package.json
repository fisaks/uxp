{
  "name": "@uxp/bff",
  "description": "",
  "version": "1.0.0",
  "type": "commonjs",
  "main": "dist/index.js",
  "types": "build_types/index.d.ts",
  "keywords": [],
  "author": "",
  "license": "ISC",
  "scripts": {
    "build": "tsc --build ",
    "trace": "tsc --traceResolution ",
    "dev": "ts-node-dev --project ./tsconfig.json --debounce 500 --poll --respawn src/index.ts",
    "clean": "rm -rf dist tsconfig.tsbuildinfo build_types",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typeorm:generate": "tsc --build && typeorm migration:generate ./src/db/migrations/GeneratedMigration -d ./dist/db/typeorm.config.js",
    "typeorm:run": "tsc --build && typeorm migration:run -d ./dist/db/typeorm.config.js",
    "typeorm:create": "tsc --build && typeorm migration:create  ./src/db/migrations/CreateMigration",
    "typeorm:revert": "typeorm migration:revert -d ./dist/db/typeorm.config.js",
    "cli": "dist/uxpcli.js"
  },
  "dependencies": {
    "@fastify/cookie": "^11.0.1",
    "@fastify/websocket": "^11.0.1",
    "@types/uuid": "^10.0.0",
    "@uxp/common": "^1.0.0",
    "ajv": "^8.17.1",
    "bcrypt": "^5.1.1",
    "commander": "^12.1.0",
    "dotenv": "^16.4.5",
    "fastify": "^5.1.0",
    "fastify-jwt": "^4.1.3",
    "fastify-plugin": "^5.0.1",
    "luxon": "^3.5.0",
    "mysql2": "^3.11.4",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.20",
    "uuid": "^11.0.3"
  },
  "devDependencies": {
    "@types/ajv": "^0.0.5",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^5.0.0",
    "@types/luxon": "^3.4.2",
    "@types/node": "^22.10.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.7.2"
  }
}
