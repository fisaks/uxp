{
    "name": "@uxp/bff",
    "description": "Unified Experience Platform backend for frontend",
    "version": "1.0.0",
    "type": "commonjs",
    "main": "dist/uxp.bff.js",
    "types": "build_types/uxp.bff.d.ts",
    "keywords": [],
    "author": "",
    "license": "ISC",
    "scripts": {
        "build": "pnpm tsc --build",
        "trace": "pnpm tsc --traceResolution",
        "dev": "pnpm ts-node-dev --project ./tsconfig.json --debounce 500 --poll --respawn src/uxp.bff.ts",
        "clean": "pnpm rimraf --glob -v dist tsconfig.tsbuildinfo build_types",
        "lint": "pnpm eslint .",
        "lint:fix": "pnpm eslint . --fix",
        "typeorm:generate": "pnpm clean && pnpm tsc --build && pnpm typeorm migration:generate ./src/db/migrations/GeneratedMigration -d ./dist/db/typeorm.config.js",
        "typeorm:run": "pnpm clean && pnpm tsc --build && pnpm typeorm migration:run -d ./dist/db/typeorm.config.js",
        "typeorm:run2": "node dist/migration-script.js",
        "typeorm:create": "pnpm clean && pnpm tsc --build && pnpm typeorm migration:create ./src/db/migrations/CreateMigration",
        "typeorm:revert": "pnpm clean && pnpm tsc --build && pnpm typeorm migration:revert -d ./dist/db/typeorm.config.js",
        "cli": "chmod 755 dist/uxpcli.js && dist/uxpcli.js"
    },
    "dependencies": {
        "@fastify/cookie": "^11.0.1",
        "@fastify/jwt": "^9.0.1",
        "@fastify/websocket": "^11.0.1",
        "@uxp/bff-common": "workspace:*",
        "@uxp/common": "workspace:*",
        "ajv": "^8.17.1",
        "axios": "^1.7.9",
        "bcrypt": "^5.1.1",
        "commander": "^12.1.0",
        "dotenv": "^16.4.5",
        "fastify": "^5.1.0",
        "fastify-plugin": "^5.0.1",
        "jsdom": "^25.0.1",
        "luxon": "^3.5.0",
        "ms": "^2.1.3",
        "mysql2": "^3.11.4",
        "nanoid": "^3.3.4",
        "reflect-metadata": "^0.2.2",
        "slugify": "^1.6.6",
        "typeorm": "^0.3.20",
        "uuid": "^11.0.3",
        "ws": "^8.18.0"
    },
    "devDependencies": {
        "@types/ajv": "^0.0.5",
        "@types/bcrypt": "^5.0.2",
        "@types/jsdom": "^21.1.7",
        "@types/jsonwebtoken": "^9.0.7",
        "@types/luxon": "^3.4.2",
        "@types/ms": "^2.1.0",
        "@types/node": "^22.10.1",
        "@types/uuid": "^10.0.0",
        "@types/ws": "^8.5.14",
        "ts-node": "^10.9.2",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.7.2"
    }
}
