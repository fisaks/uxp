{
  "name": "@uxp/bff",
  "description": "",
  "version": "1.0.0",
  "type": "commonjs",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "keywords": [],
  "author": "",
  "license": "ISC",
  "scripts": {
    "build": "tsc --build ",
    "trace": "tsc --traceResolution ",
    "dev": "ts-node-dev --project ./tsconfig.json -r tsconfig-paths/register --respawn src/index.ts",
    "clean": "rm -rf dist tsconfig.tsbuildinfo",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typeorm:generate": "tsc --build && typeorm migration:generate ./src/db/migrations/GeneratedMigration -d ./dist/db/typeorm.config.js",
    "typeorm:run": "tsc --build && typeorm migration:run -d ./dist/db/typeorm.config.js",
    "typeorm:revert": "typeorm migration:revert -d ./dist/db/typeorm.config.js"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "joi": "^17.13.3",
    "mysql2": "^3.11.4",
    "socket.io": "^4.8.1",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "ts-node-dev": "^2.0.0"
  }
}