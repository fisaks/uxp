{
    "compilerOptions": {
        "noImplicitAny": true,
        "strict": true,
        "strictNullChecks": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "noImplicitReturns": true,
        "experimentalDecorators": true,
        "target": "ES2021",
        "module": "esnext",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "outDir": "./dist",
        "jsx": "react-jsx",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "allowJs": true,
        "composite": true,
        "baseUrl": ".",
        "paths": {
            "@uxp/common": ["packages/uxp-common/dist", "packages/uxp-common/src"],
            "@uxp/bff-common": ["packages/uxp-bff-common/dist", "packages/uxp-bff-common/src"],

            "@uxp/ui-lib": ["packages/uxp-ui-lib/dist", "packages/uxp-ui-lib/src"],
            "@h2c/common": ["packages/h2c-common/dist", "packages/h2c-common/src"],
            "@uxp/tools": ["packages/tools/src"]
        },
        "types": ["node", "webpack-env"],
        "typeRoots": ["./node_modules/@types"]
    },
    "include": ["packages/*/src/**/*.ts", "packages/*/src/**/*.tsx", "packages/*/src/**/*.cjs"],
    "exclude": ["node_modules", "**/dist", "**/build"],
    "files": ["typings.d.ts", "global.d.ts"]
}
