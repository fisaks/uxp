{
  "compilerOptions": {
    "noImplicitAny": true,
    "strict": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noImplicitReturns": true,
    "experimentalDecorators": true,
    "target": "ES2021",
    "module": "esnext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "jsx": "react",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,
    "composite": true,
    "baseUrl": ".",
    
    "paths": {
      "*": ["packages/*/src"]
    },
    "types": ["node", "webpack-env"],
    "typeRoots": [ "./node_modules/@types"]
  },
  "include": [
    "packages/*/src/**/*.ts",
    "packages/*/src/**/*.tsx",
    "packages/*/src/**/*.cjs"
  ],
  "references": [
    {
      "path": "./packages/uxp-ui-core"
    },
    {
      "path": "./packages/uxp-ui-presenter"
    }
  ]
}
