{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "UXP BFF (debug)",
            "runtimeExecutable": "tsx",
            "runtimeArgs": [
                "watch",
                "--inspect"
            ],
            "args": [
                "${workspaceFolder}/packages/uxp-bff/src/uxp.bff.ts"
            ], // Replace with your main TypeScript file
            "cwd": "${workspaceFolder}/packages/uxp-bff",
            "restart": true,
            "sourceMaps": true,
            "console": "integratedTerminal",
            "env": {
                "NODE_ENV": "development"
            }
        },
        {
            "name": "Start UHN master debug process",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "tsx",
            "runtimeArgs": [
                "watch",
                "--inspect"
            ],
            "args": [
                "src/uhn.master.ts"
            ],
            "cwd": "${workspaceFolder}/packages/uhn-master",
            "restart": true,
            "skipFiles": [
                "<node_internals>/**"
            ],
            "sourceMaps": true,
            "outFiles": [],
            "console": "integratedTerminal",
            "env": {
                "NODE_ENV": "development"
            }
        },
        {
            "name": "Attach to UHN master debug process",
            "type": "node",
            "request": "attach",
            "port": 9229,
            "address": "localhost",
            "restart": true,
            "protocol": "inspector",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "sourceMaps": true,
            "outFiles": []
        },
        {
            "name": "Attach to UHN rule runtime process",
            "type": "node",
            "request": "attach",
            "port": 9250,
            "address": "localhost",
            "restart": true,
            "skipFiles": [
                "<node_internals>/**"
            ],
            "sourceMaps": true,
            "outFiles": [],
            "localRoot": "${workspaceFolder}",
            "remoteRoot": "/",
            "sourceMapPathOverrides": {
                "file:///uhn-workspace/blueprint/active/dist/*": "/workspaces/uhn/blueprint/active/dist/*",
                "file:///uhn-runtime/node_modules/*": "/node_modules/*",
                "/uhn-runtime/*": "${workspaceFolder}/*"
            }
        },
    ]
}