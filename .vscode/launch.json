{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug with ts-node-dev",
            "runtimeExecutable": "npx",
            "runtimeArgs": [
                "ts-node-dev",
                "--inspect",
                "--transpile-only"
            ],
            "args": [
                "${workspaceFolder}/packages/uxp-bff/src/index.ts"
            ], // Replace with your main TypeScript file
            "cwd": "${workspaceFolder}/packages/uxp-bff",
            "restart": true,
            "sourceMaps": false,
            "console": "integratedTerminal",
            "env": {
                "NODE_ENV": "development"
            }
        },
        {
            "name": "Attach to UHN debug process",
            "type": "node",
            "request": "attach",
            "port": 9229,
            "address": "localhost",
            "restart": true,
            "protocol": "inspector",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "sourceMaps": true,
            "outFiles": []
        }
    ]
}